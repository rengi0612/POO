@model Pruebas.Models.Usuario
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/EditarUsuario.css" />
</head>
<body>
    <div id="MainWrapper">
        <div id="Titulo">
            <h1>Crear Perfil</h1>
        </div>
        <form asp-action="GuardarUsuario" method="POST">
            <h1>Perfil de Usuario</h1>
            <ul>
                <li>
                    <label asp-for="user"></label>
                    <input asp-for="user">
                </li>
                <li>
                    <label asp-for="contraseña"></label>
                    <input asp-for="contraseña">
                </li>
                <li>
                    <label asp-for="nombre"></label>
                    <input asp-for="nombre">
                </li>
                <li>
                    <label asp-for="cedula"></label>
                    <input asp-for="cedula">
                </li>
                <li>
                    <label>Tipo </label>
                    <input type="text">
                </li>
                <li>
                    <label asp-for="Direccion"></label>
                    <input asp-for="Direccion">
                </li>
                <li>
                    <label asp-for="telefono"></label>
                    <input asp-for="telefono">
                </li>
                <li>
                    <label asp-for="metodoPago"></label>
                    <input asp-for="metodoPago">
                </li>
                <li id="opciones">
                    <button type="submit">Guardar</button>
                </li>
            </ul>

        </form>
    </div>
</body>
</html>